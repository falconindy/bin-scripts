#!/bin/bash

echo "Network Device Statistics (in mb)"
printf "\n%8s%10s%10s\n" "Device" "Sent" "Received" #Header
#echo ------------------------------
for dev in $(ls /sys/class/net); do
	stats=($(cat /proc/net/dev | grep $dev | cut -d: -f2 | awk '{print $1,$9}'))
	sent=$(echo "scale=2;${stats[0]} / 1024 / 1024" | bc -l)
	recv=$(echo "scale=2;${stats[1]} / 1024 / 1024" | bc -l) 
	printf "%8s%10.2f%10.2f\n" $dev $sent $recv
done
echo 
